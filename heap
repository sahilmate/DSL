#include <iostream> 
using namespace std;

void minInsert(int arr[], int i) {
    int parent = (i - 1) / 2;
    int cur = i;
    while (parent >= 0 && arr[parent] > arr[cur]) {
        swap(arr[parent], arr[cur]);
        cur = parent;
        parent = (cur - 1) / 2;
    }
}


void maxInsert(int arr[], int i) {
    int parent = (i - 1) / 2;
    int cur = i;
    while (parent >= 0 && arr[parent] < arr[cur]) {
        swap(arr[parent], arr[cur]);
        cur = parent;
        parent = (cur - 1) / 2;
    }
}

int main() { 
    int n;
    cout << "Enter number of students: ";
    cin >> n;
    int arr[100];
    
    for (int i = 0; i < n; i++) {
        cout << "Enter marks scored by Student " << i + 1 << ": ";
        cin >> arr[i];
        minInsert(arr, i);
    }
    cout << "Minimum value is: " << arr[0] << endl;

    for (int i = 0; i < n; i++) {
        maxInsert(arr, i);
    }
    cout << "Maximum value is: " << arr[0] << endl;

    return 0;
}

